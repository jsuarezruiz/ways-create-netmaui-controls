                BackgroundColor="Black"              
                TextColor="White"
                Text="Next, we can see each CheckBox created in a different way."/>
            <StackLayout   
                Padding="12">
                <Label
                    Text=".NET MAUI CheckBox"/>
                <CheckBox />
                <Label    
                    Text="01. Handler" />
                <controls:CustomCheckBox />
                <Label    
                    Text="02. ContentView"/>
                <controls:ContentViewCheckBox />
